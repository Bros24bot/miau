<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MyPop</title>
  <style>
    body {
      text-align: center;
      background-color: #f0f0f0;
      font-family: sans-serif;
    }
    img {
      width: 300px;
      cursor: pointer;
      transition: transform 0.05s;
    }
    img:active {
      transform: scale(0.95);
    }
  </style>
</head>
<body>
  <h1>Click Me!</h1>
  <img id="pop-img" src="image_closed.png" alt="Pop Image">
  <audio id="pop-sound" src="sound.mp3"></audio>

  <script>
    const img = document.getElementById('pop-img');
    const sound = document.getElementById('pop-sound');

    const closedSrc = 'image_closed.png';
    const openSrc = 'image_open.png';

    img.addEventListener('mousedown', () => {
      img.src = openSrc;
      sound.currentTime = 0;
      sound.play();
    });

    img.addEventListener('mouseup', () => {
      img.src = closedSrc;
    });

    img.addEventListener('mouseleave', () => {
      img.src = closedSrc;
    });
  </script>
</body>
</html>
